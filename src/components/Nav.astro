---
import { borderColor } from '../styles/shared.ts'

const {path} = Astro.props;

---
<style lang="scss" define:vars={{borderColor}}>
    nav {
        display: flex;
        border-bottom: 1px solid var(--borderColor);

        * {
            padding: 0 1em;
            border-right: 1px solid var(--borderColor);
        }

        a {
            color: inherit;
            border-top: 5px solid transparent;
            padding-bottom: 8px;
            text-decoration: none;

            &.active {
                border-top: 5px solid;
            }

            &:focus,
            &:hover {
                color: red;
            }

        }
    }

    h1 {

    }
</style>


<nav>
    <a class={path === "/" ? "active" : ""} href="/">
        Home
    </a>

    <a class={path === "/open" ? "active" : ""} href="/open#people">
        Open People
    </a>

    <a class={path === "/open" ? "active" : ""} href="/open#source">
        Open Source
    </a>

    <a class={path === "/diversity" ? "active" : ""} href="/diversity">
        Diversity
    </a>

    <a class={path === "/events" ? "active" : ""} href="/events">
        Events &amp; Talks
    </a>
</nav>